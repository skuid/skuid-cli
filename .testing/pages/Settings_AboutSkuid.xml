	<resources>
		<labels/>
		<javascript>
			<jsitem location="inlinesnippet" name="getCurrentSkuidVersion" cachelocation="false" url="">
				var params = arguments[0],
						$ = skuid.$;
				var model = skuid.$M('about_uiControl'),
						row = model.getFirstRow(),
						versionNumber = skuid.version.number,
						releaseNoteVersionNumber = versionNumber.substr(0,versionNumber.length - 2);
				model.updateRow(row, {'currentSkuidVersionName': skuid.version.name});
				model.updateRow(row, {'currentSkuidVersionNumber': releaseNoteVersionNumber});
				model.updateRow(row, {'pageAPI': skuid.version.id});
			</jsitem>
		</javascript>
		<actionsequences>
			<actionsequence id="37c6d9e8-a1a0-42ba-a664-03a9d4e31968" label="Get current Skuid version" type="event-triggered" event-scope="component" event-name="page.rendered">
				<description/>
				<actions>
					<action type="custom" snippet="getCurrentSkuidVersion"/>
				</actions>
			</actionsequence>
		</actionsequences>
	</resources>
